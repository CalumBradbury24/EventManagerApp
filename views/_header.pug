nav.header
    a.header-logo-container(href="/")
        //img.logo(src='../assets/Eventify-dark.png' alt="Logo")
    form.event-search-form(role="search")
        input.event-search-input(type="search" placeholder="Search events" autofocus)
        button.event-search-button(type="submit")
            img.event-search-icon(src='../assets/search-icon.svg')

    .menu-container
        a.link(href="/find-events")
            h3.link-text Whats On
        a.link(href="/find-events")
            h3.link-text Featured Events
        if user 
            .user-container
                .dropdown
                    if user 
                        img.dropdown-button(src=`/img/users/${user.userImage}`)
                    else    
                        img.dropdown-button(src='../assets/User.svg' alt="Logo")
                    .dropdown-content 
                        a.dropdown-link(href='/my-account') 
                            h3.link-text My Account
                        a.dropdown-link#logout 
                            h3.link-text Sign Out
        else
            .signIn-container
                a.link.sign-in-text(href='/login') 
                    h3.link-text Sign In/Up